{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/Controller/*.ts"
  ],

  "spec": {
    "yaml": true,
    "host": "localhost:3005",

    "outputDirectory": "build",
    "specVersion": 3,
    "specMerging": "recursive",
    "spec": {
      "paths": {
        "/baumscheibe/{id}/pictures": {
          "patch": {
            "operationId": "UpdateBaumscheibePictures",
            "responses": {
              "200": {
                "description": "Ok",
                "content": {
                  "application/json": {
                    "schema": {}
                  }
                }
              }
            },
            "security": [],
            "requestBody": {
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "file": {
                        "type": "string",
                        "format": "binary"
                      },
                      "userId": {
                        "type": "string",
                        "format": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "routesDir": "build"
  }
}
